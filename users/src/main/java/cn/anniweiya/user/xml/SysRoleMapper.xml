<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.anniweiya.user.mapper.SysRoleMapper">

  <!-- 通用查询映射结果 -->
  <resultMap id="BaseResultMap" type="cn.anniweiya.user.entity.SysRole">
    <id column="fid" property="fid"/>
    <result column="frole" property="frole"/>
    <result column="fupdate_time" property="fupdateTime"/>
    <result column="fupdator" property="fupdator"/>
    <result column="fcreate_time" property="fcreateTime"/>
    <result column="fcreator" property="fcreator"/>
    <result column="fis_delete" property="fisDelete"/>
    <result column="fext" property="fext"/>
  </resultMap>


  <sql id="BaseSql">
		${alias}.fid,
		${alias}.frole,
		${alias}.fupdate_time,
		${alias}.fupdator,
		${alias}.fcreate_time,
		${alias}.fcreator,
		${alias}.fis_delete,
		${alias}.fext
	</sql>

  <select id="findByUserRole"  parameterType="java.lang.Integer" resultType="cn.anniweiya.user.entity.SysRole">
    SELECT
    <include refid="BaseSql">
       <property name="alias" value="sr"/>
    </include>
    from sys_role as sr right join sys_user_role as sur on sr.fid = sur.frole_id
    where sur.fuser_id = #{userId}
  </select>


  <select id="findPermissions" resultType="java.lang.String" parameterType="java.lang.Long">
    select fid from sys_role where fid = #{fid}
  </select>
</mapper>
